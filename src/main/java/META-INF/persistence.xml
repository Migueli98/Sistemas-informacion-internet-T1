<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="olea.and.company" transaction-type="RESOURCE_LOCAL">
		<class>es.uma.informatica.sii.Usuario</class>
		<class>es.uma.informatica.sii.Alumno</class>
		<class>es.uma.informatica.sii.Profesor</class>
		<class>es.uma.informatica.sii.Pas</class>
		<class>es.uma.informatica.sii.Ong</class>
		<class>es.uma.informatica.sii.Curriculum</class>
		<class>es.uma.informatica.sii.Asignaturas</class>
		<class>es.uma.informatica.sii.Centro</class>
		<class>es.uma.informatica.sii.Servicios</class>
		<class>es.uma.informatica.sii.Actividades</class>
		<class>es.uma.informatica.sii.Requisitos</class>
		<class>es.uma.informatica.sii.Informe_Alumnos</class>
		<properties>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sii"/>
			<property name="javax.persistence.jdbc.user" value="siiuser"/>
			<property name="javax.persistence.jdbc.password" value="siipassword"/>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
		</properties>
	</persistence-unit>
</persistence>
